@model Soul.Models.user
@{
    ViewBag.Title = "UserProfile";
}



<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link rel="stylesheet" type="text/css" media="screen and (max-height: 450px)" />
    <link rel="stylesheet" type="text/css" media="screen and (max-height: 450px)" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .sidenav {
            height: 100%;
            width: 200px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            padding-top: 60px;
        }

            .sidenav a {
                padding: 6px 6px 6px 32px;
                text-decoration: none;
                font-size: 25px;
                color: #818181;
                display: block;
            }

                .sidenav a:hover {
                    color: #f1f1f1;
                }


        .main {
            margin-left: 200px; /* Same as the width of the sidenav */
        }
    </style>


</head>
<body>
    <div class="sidenav">

        <a href="http://localhost:50741/User/UserProfile">User Profile</a>
        <a href="http://localhost:50741/User/Searchuser">Search Users</a>
        <a href="http://localhost:50741/User/getnotified">Proposal Requests</a>
        <a href="http://localhost:50741/User/Login">Log Out</a>
    </div>

    <div class="main">

        <h2>User Profile</h2>
        <center>

            <div class="card" CssClass="profile-img-card rounded-circle" style="width:200px">
                @if (Session["email"] != null)
                {



                    <img src="@Html.ViewData["Img"]" height="200" width="150" />



                }

            </div>
            <h2>Welcome <br />@Session["email"].ToString()</h2>
        </center>
        <br /><br />



        <div class="row">
          

            <div class="col-md-4">
                <h2>Search Users</h2>
                <p><a class="btn btn-primary btn-lg" href="http://localhost:50741/User/Searchuser">Go </a></p>
            </div>
            <div class="col-md-4">
                <h2>Proposal Requests</h2>
                <p><a class="btn btn-primary btn-lg" href="http://localhost:50741/User/getnotified">Go </a></p>
            </div>
        </div>
    </div>



</body>
</html>




